{
   "env": {
      "es2021": true,
      "node": true
   },
   "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recomended"
   ],
   "parser": "@typescript-eslint/parser",
   "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
   },
   "plugins": [
      "@typescript-eslint"
   ],
   "rules": {
      "import/extensions": [
         "error",
         "ignorePackages",
         {
            "ts": "never"
         }
      ]
   },
   "settings": {
      "import/resolver": {
         "typescript": {}
      }
   }
}
